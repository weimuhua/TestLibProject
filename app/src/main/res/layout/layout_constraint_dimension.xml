<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_a1"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@color/colorAccent"
        android:gravity="center"
        android:text="tv_a1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_b1"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@color/colorAccent"
        android:gravity="center"
        android:text="tv_b1"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="80dp"
        android:layout_height="100dp"
        android:background="@color/colorPrimary"
        android:gravity="center"
        android:text="layout_width=80dp"
        app:layout_constraintLeft_toRightOf="@id/tv_a1"
        app:layout_constraintRight_toLeftOf="@id/tv_b1" />


    <TextView
        android:id="@+id/tv_a2"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="120dp"
        android:background="@color/colorAccent"
        android:gravity="center"
        android:text="tv_a2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_b2"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="120dp"
        android:background="@color/colorAccent"
        android:gravity="center"
        android:text="tv_b2"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_marginTop="120dp"
        android:background="@color/colorPrimary"
        android:gravity="center"
        android:text="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/tv_a2"
        app:layout_constraintRight_toLeftOf="@id/tv_b2"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_a3"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="240dp"
        android:background="@color/colorAccent"
        android:gravity="center"
        android:text="tv_a3"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_b3"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="240dp"
        android:background="@color/colorAccent"
        android:gravity="center"
        android:text="tv_b3"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:layout_marginTop="240dp"
        android:background="@color/colorPrimary"
        android:gravity="center"
        android:text="0dp"
        app:layout_constraintLeft_toRightOf="@id/tv_a3"
        app:layout_constraintRight_toLeftOf="@id/tv_b3"
        app:layout_constraintTop_toTopOf="parent" />
</android.support.constraint.ConstraintLayout>