<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/normal_margin_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="normal_margin"
        android:textSize="16dp" />

    <TextView
        android:id="@+id/normal_tv_a"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginRight="50dp"
        android:background="@color/colorPrimary"
        android:gravity="center"
        android:text="A"
        app:layout_constraintRight_toLeftOf="@id/normal_tv_b" />

    <TextView
        android:id="@+id/normal_tv_b"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginRight="10dp"
        android:background="@color/colorPrimary"
        android:gravity="center"
        android:text="B"
        app:layout_constraintRight_toRightOf="parent" />

    <Button
        android:id="@+id/gone_margin_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="200dp"
        android:text="gone_margin"
        android:textSize="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/gone_tv_a"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="200dp"
        android:background="@color/colorPrimary"
        android:gravity="center"
        android:text="A"
        app:layout_constraintRight_toLeftOf="@id/gone_tv_b"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_goneMarginRight="110dp" />

    <TextView
        android:id="@+id/gone_tv_b"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="200dp"
        android:background="@color/colorPrimary"
        android:gravity="center"
        android:text="B"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>